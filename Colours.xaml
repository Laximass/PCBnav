<?xml version="1.0" encoding="utf-8"?>
<Window Height="295" Title="Colours" Width="362" mc:Ignorable="d" x:Class="PCB_Nav3.Colours" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:PCB_Nav3" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
<Grid Background="{DynamicResource BGColour}" x:Name="ColGrid">
<Label Background="White" BorderBrush="#FF6A6A6A" BorderThickness="2,2,2,2" Content="Background" FontWeight="Bold" Foreground="{DynamicResource TextColour}" Height="27" HorizontalAlignment="Left" Margin="30,72,0,0" Padding="5,0,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="83" x:Name="BGClbl"/>
<Button Command="{Binding SaveCommand}" Content="Save" Height="30" Margin="106,208,105,0" VerticalAlignment="Top" x:Name="SaveCBtn"/>
<Label Background="White" BorderBrush="#FF6A6A6A" BorderThickness="2,2,2,2" Content="High-lighted Text Colour" FontWeight="Bold" Foreground="{DynamicResource TextColour}" Height="28" HorizontalAlignment="Left" Margin="30,159,0,0" Padding="5,0,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="158" x:Name="HLTXTlbl"/>
<ComboBox Height="31" ItemsSource="{Binding AvailableColors}" Margin="199,74,30,0" SelectedItem="{Binding SelectedBackgroundColor}" VerticalAlignment="Top" x:Name="BGcmbColors">
<ComboBox.ItemTemplate>
<DataTemplate>
<StackPanel Orientation="Horizontal">
<Rectangle Fill="{Binding Name}" Height="16" Margin="0,2,5,2" Width="16"/>
<TextBlock Text="{Binding Name}"/>
</StackPanel>
</DataTemplate>
</ComboBox.ItemTemplate>
</ComboBox>
<ComboBox Height="30" ItemsSource="{Binding AvailableColors}" Margin="199,158,30,0" SelectedItem="{Binding SelectedTextColor}" VerticalAlignment="Top" x:Name="TXTcmbColors">
<ComboBox.ItemTemplate>
<DataTemplate>
<StackPanel Orientation="Horizontal">
<Rectangle Fill="{Binding Name}" Height="16" Margin="0,2,5,2" Width="16"/>
<TextBlock Text="{Binding Name}"/>
</StackPanel>
</DataTemplate>
</ComboBox.ItemTemplate>
</ComboBox>
<Label Background="White" BorderBrush="#FF6A6A6A" BorderThickness="2,2,2,2" ClipToBounds="True" Content="High-light Colour" FontWeight="Bold" Foreground="{DynamicResource TextColour}" Height="27" HorizontalAlignment="Left" Margin="30,116,0,0" Padding="5,0,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="115" x:Name="HLCOLlbl"/>
<ComboBox Height="30" ItemsSource="{Binding AvailableColors}" Margin="199,116,30,0" SelectedItem="{Binding SelectedHighlightColor}" VerticalAlignment="Top" x:Name="HLcmbColors">
<ComboBox.ItemTemplate>
<DataTemplate>
<StackPanel Orientation="Horizontal">
<Rectangle Fill="{Binding Name}" Height="16" Margin="0,2,5,2" Width="16"/>
<TextBlock Text="{Binding Name}"/>
</StackPanel>
</DataTemplate>
</ComboBox.ItemTemplate>
</ComboBox>
<Label Content="The colours set here effect the applications
background colour, and the high-light colour 
in the projects window." FontFamily="Calibri" FontSize="14" Height="56" HorizontalAlignment="Center" Margin="0,10,0,0" Padding="5,0,5,5" VerticalAlignment="Top" Width="302"/>
</Grid>
</Window>