<?xml version='1.0' encoding='utf-8'?>
<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:PCB_Nav3" x:Class="PCB_Nav3.ProjectPath" mc:Ignorable="d" Title="Set Project Folder" Height="170" Width="320" MinWidth="320" MinHeight="165">
  <Grid x:Name="CreateGrid" Background="{DynamicResource BGColour}" MinWidth="314" MinHeight="141">
    <TextBox x:Name="ProjectPathtb" Margin="130,41,25,0" TextWrapping="Wrap" Foreground="{DynamicResource TextColour}" Height="24" VerticalAlignment="Top" Text="{Binding ProjectFolderPath}"/>
    <Label x:Name="ProjPathlbl" Content="Folder Path" HorizontalAlignment="Left" Margin="25,41,0,0" Width="90" Foreground="{DynamicResource TextColour}" Background="White" FontWeight="Bold" BorderThickness="2,2,2,2" Padding="5,0,0,0" VerticalContentAlignment="Center" BorderBrush="#FF6A6A6A" Height="24" VerticalAlignment="Top"/>
    <Button x:Name="SetProjOKbtn" Content="Set Path" Margin="25,0,187,25" Height="31" VerticalAlignment="Bottom" Command="{Binding SetPathCommand}"/>
    <Button x:Name="SetProjCANbtn" Content="Cancel" Margin="0,0,25,25" HorizontalAlignment="Right" Width="108" Height="31" VerticalAlignment="Bottom" Command="{Binding CancelCommand}"/>
    <Label Content="Set Projects Folder" Height="33" VerticalAlignment="Top" FontWeight="Bold" Margin="97,0,97,0" Padding="0,0,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
  </Grid>
</Window>
